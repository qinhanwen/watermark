{
  "compilerOptions": {
    "target": "es2017",
    "module": "ES6",
    "outDir": "lib",
    "strict": true,
    "noImplicitAny": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "moduleResolution": "node",        
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "esModuleInterop": true,
  },
  "include": ["src/**/*"]
}
